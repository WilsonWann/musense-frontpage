---

<Layout
  title={env.VITE_APP_TITLE}
  description={env.VITE_APP_DESCRIPTION}
>
  <About client:load />
  <OurService client:load />
  <ContactUs
    emailProps={emailProps}
    client:load
  />
</Layout>

<style is:global>
  .bubble-box-mobile {
    display: none;
  }
  .bubble-box {
    position: relative;
    margin: 240px auto 0;
    width: clamp(70rem, 70rem + 23vw, 111rem);
    display: flex;
    flex-direction: column;
  }
  .bubble-box > div {
    position: inherit;
    display: flex;
    flex-direction: row;
    gap: 149px;
    width: fit-content;
  }
  .bubble-box > div:first-child {
    align-self: flex-start;
  }
  .bubble-box > div:last-child {
    align-self: flex-end;
    top: -20px;
  }
  .orange-bubble-right,
  .orange-bubble-left {
    position: relative;
    width: 354px;
    height: 278px;
  }
  .orange-bubble-right {
    margin-right: 0;
    background-image: url(/assets/index/orangeBubble_right.webp);
  }
  .orange-bubble-left {
    margin-left: 0;
    background-image: url(/assets/index/orangeBubble_left.webp);
  }
  .blue-bubble-right,
  .blue-bubble-left {
    position: relative;
    width: 371px;
    height: 291px;
  }
  .blue-bubble-right {
    margin-left: auto;
    background-image: url(/assets/index/blueBubble_right.webp);
  }
  .blue-bubble-left {
    margin-left: auto;
    background-image: url(/assets/index/blueBubble_left.webp);
  }
  [data-aos='orange-slide-left'],
  [data-aos='blue-slide-left'] {
    transition-property: transform, opacity;
    transform: translateX(-500px);
    opacity: 0;
  }
  [data-aos='orange-slide-left'].aos-animate,
  [data-aos='blue-slide-left'].aos-animate {
    transform: translateX(0);
    opacity: 1;
  }

  [data-aos='orange-slide-right'],
  [data-aos='blue-slide-right'] {
    transition-property: transform, opacity;
    transform: translateX(500px);
    opacity: 0;
  }
  [data-aos='orange-slide-right'].aos-animate,
  [data-aos='blue-slide-right'].aos-animate {
    transform: translateX(0);
    opacity: 1;
  }

  @media (max-width: 1500px) {
    .bubble-box {
      width: 76vw;
    }
    .bubble-box > div {
      gap: 10vw;
    }

    .orange-bubble-right,
    .orange-bubble-left,
    .blue-bubble-right,
    .blue-bubble-left {
      width: 24vw;
      height: 19vw;
    }
  }

  @media (max-width: 768px) {
    .bubble-box {
      display: none;
    }
    .bubble-box-mobile {
      margin: 3.5rem auto 0;
      width: calc(100% - 2rem);
      display: flex;
      flex-direction: row;
      justify-content: space-between;
    }
    .bubble-box-mobile > div {
      display: flex;
      flex-direction: column;
      gap: 19rem;
      margin: unset;
    }
    .bubble-box-mobile > div:first-child {
    }
    .bubble-box-mobile > div:last-child {
      position: relative;
      margin-top: 16rem;
      left: -6rem;
    }

    .orange-bubble-product,
    .orange-bubble-view,
    .blue-bubble-time,
    .blue-bubble-seo {
      width: 22rem;
      height: 16.5rem;
    }
    .orange-bubble-product {
      background-image: url(/assets/mobile/about/orangeBubble_product.webp);
    }

    .orange-bubble-view {
      background-image: url(/assets/mobile/about/orangeBubble_view.webp);
    }
    .blue-bubble-time {
      background-image: url(/assets/mobile/about/blueBubble_time.webp);
    }
    .blue-bubble-seo {
      background-image: url(/assets/mobile/about/blueBubble_seo.webp);
    }
    .orange-bubble-product::after,
    .orange-bubble-view::after,
    .blue-bubble-time::after,
    .blue-bubble-seo::after {
      content: '';
      display: block;
      position: relative;
      width: 14rem;
      height: 14rem;
      background-image: url(/assets/mobile/about/productImage.webp);
      background-repeat: no-repeat;
      background-position: center;
      background-size: contain;
    }
    .orange-bubble-product::after {
      background-image: url(/assets/mobile/about/productImage.webp);
      margin-top: 1.3rem;
      margin-left: 21rem;
    }
    .orange-bubble-view::after {
      background-image: url(/assets/mobile/about/viewImage.webp);
      margin-top: 1.3rem;
      margin-left: 20.5rem;
    }
    .blue-bubble-time::after {
      background-image: url(/assets/mobile/about/timeImage.webp);
      margin-top: 3rem;
      left: -12rem;
    }
    .blue-bubble-seo::after {
      background-image: url(/assets/mobile/about/seoImage.webp);
      margin-top: 2.8rem;
      left: -12rem;
    }
  }
</style>
