---
import Layout from '../layouts/Layout.astro';
import About from '@components/index/about';
import OurService from '@components/index/ourService';
import ContactUs from '@components/index/contactUs';
---

<Layout
  title='陌聲行銷-關鍵字,FB廣告代理操作,CIS平面設計,SEO網頁設計'
  description='陌聲行銷提供FB廣告代操,專業內容和圖文設計,專業貼近網友習性,廣告投放,專業的網頁設計,平面設計,品牌CIS設計,SEO關鍵字優化,關鍵字廣告等服務'
>
  <About client:load />
  <OurService client:load />
  <ContactUs client:load />
</Layout>

<style is:global>
  .bubble-box {
    position: relative;
    margin: 240px auto 0;
    width: 1110px;
    display: flex;
    flex-direction: column;
  }
  .bubble-box > div {
    position: inherit;
    display: flex;
    flex-direction: row;
    gap: 186px;
    width: fit-content;
  }
  .bubble-box > div:first-child {
    margin-left: 0;
  }
  .bubble-box > div:last-child {
    margin-right: 0;
    margin-left: auto;
    top: -20px;
  }

  .orange-bubble-right,
  .orange-bubble-left {
    position: relative;
    width: 354px;
    height: 278px;
  }
  .orange-bubble-right {
    margin-right: 0;
    background-image: url(./../assets//img/index/orangeBubble_right.png);
  }
  .orange-bubble-left {
    margin-left: 0;
    background-image: url(./../assets//img/index/orangeBubble_left.png);
  }

  .blue-bubble-right,
  .blue-bubble-left {
    position: relative;
    width: 371px;
    height: 291px;
  }
  .blue-bubble-right {
    margin-left: auto;
    background-image: url(./../assets//img/index/blueBubble_right.png);
  }
  .blue-bubble-left {
    margin-left: auto;
    background-image: url(./../assets//img/index/blueBubble_left.png);
  }
  [data-aos='orange-slide-left'],
  [data-aos='blue-slide-left'] {
    transition-property: transform, opacity;
    transform: translateX(-500px);
    opacity: 0;
  }
  [data-aos='orange-slide-left'].aos-animate,
  [data-aos='blue-slide-left'].aos-animate {
    transform: translateX(0);
    opacity: 1;
  }

  [data-aos='orange-slide-right'],
  [data-aos='blue-slide-right'] {
    transition-property: transform, opacity;
    transform: translateX(500px);
    opacity: 0;
  }
  [data-aos='orange-slide-right'].aos-animate,
  [data-aos='blue-slide-right'].aos-animate {
    transform: translateX(0);
    opacity: 1;
  }

  @media (max-width: 1200px) {
    .bubble-box > div {
      gap: 10vw;
    }
    .bubble-box > div:first-child {
      margin-left: 5px;
    }

    .bubble-box > div:last-child {
      margin-right: 0;
      margin-left: 35vw;
      top: -20px;
    }

    .orange-bubble-right,
    .orange-bubble-left,
    .blue-bubble-right,
    .blue-bubble-left {
      width: 224px;
    }
  }
</style>
